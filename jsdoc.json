{
  "plugins": ["node_modules/better-docs/typescript", "plugins/markdown"],
  "source": {
    "include": ["./packages", "README.md"],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(node_modules|docs)"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "opts": {
    "tutorials": "./Tutorials",
    "recurse": true,
    "destination": "./docs",
    "readme": "README.md",
    "include": [
      "./packages",
      "./packages/cdk-example/README.md",
      "./packages/material-example/README.md",
      "./packages/raw-example/README.md"
    ],
    "template": "node_modules/better-docs"
  }
}
